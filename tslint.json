{
  "defaultSeverity": "warning",
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": [
      true,
      {
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all"
      }
    ],
    "strict-type-predicates": false,
    "no-floating-promises": false,
    "no-duplicate-variable": true,
    "no-unused-variable": [
      true
    ]
  },
  "extends": [
    "codelyzer",
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
}
